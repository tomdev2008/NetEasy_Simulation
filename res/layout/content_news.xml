<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/mainbg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_news2left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/biz_news_main_back_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/netease_top" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新闻"
            android:textColor="#fff"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/iv_news2right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_main_action_personal_normal" />
    </LinearLayout>

    <include layout="@layout/content_news_up"/>
   

    <com.simulation.neteasy.view.MyViewPager
        android:id="@+id/vp_content_news"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.simulation.neteasy.view.MyViewPager>

</LinearLayout>